        </header>
            <section class="content-main">

            <div class="card mb-4">
                
            <section class="content-main py-4">
                <div class="container-fluid">
                    <div class="row">
                       
                            <div class="container">
                                <h2>Add New Product</h2>
                        </div>
                        <div class="col-12 col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <form action="" method="post" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label for="product_title">Product title</label>
                                            <input type="text" class="form-control" id="product_title" name="name" placeholder="Type here" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="quantity">Quantity</label>
                                            <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Type here" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Category</label>
                                            <select class="form-control" id="product-category" name="category">
                                                <% if (datas && datas.length > 0) { %>
                                                    <% datas.forEach(data => { %>
                                                        <% if (data.is_list === false) { %>
                                                            <option value="<%= data._id %>"><%= data.name %></option>
                                                        <% } %>
                                                    <% }); %>
                                                <% } %>
                                            </select>                                            
                                        </div>
                                        <div class="form-group">
                                            <label>Price</label>
                                            <input type="text" class="form-control" name="price" placeholder="Type here" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="offer">Offer</label>
                                            <input type="text" class="form-control" id="offer" name="offer" placeholder="Type here" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea class="form-control" rows="4" name="description" placeholder="Type here" required></textarea>
                                        </div>
                                        <div class="row d-flex justify-content-center ">
                                            <div class="row d-flex justify-content-between ">
                                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                                    <label for="imageInput1" class="image-label">Image 1
                                                        
                                                        <input name="image1" type="file" accept="image/*" id="imageInput1" class="imageInput" required>
                                                    </label>
                                                </div>
                                                <!-- Repeat similar code for Image 2, Image 3, and Image 4 -->
            
                                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                                    <label for="imageInput2" class="image-label">Image 2
                                                        <input name="image2" type="file" accept="image/*" id="imageInput2" class="imageInput" required>
                                                    </label>
                                                </div>
            
                                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                                    <label for="imageInput3" class="image-label">Image 3
                                                        
                                                        <input name="image3" type="file" accept="image/*" id="imageInput3" class="imageInput" required>
                                                    </label>
                                                </div>
            
                                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                                    <label for="imageInput4" class="image-label">Image 4
                                                        
                                                        <input name="image4" type="file" accept="image/*" id="imageInput4" class="imageInput" required>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="container">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            
