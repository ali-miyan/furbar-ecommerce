                        labels: [' COD', 'wallet', 'razorpay'],
                        datasets: [
                            {
                                label: "payment",
                                backgroundColor: "#fa05d2",
                                barThickness: 10,
                                data: ['<%=cashOnDelivery%>', '<%=wallet%>', '<%=razorpay%>'],
                            }
                        ]
                    },
                    options: {
                        plugins: {
                            legend: {
                                labels: {
                                    usePointStyle: true,
                                },
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            } //end if

